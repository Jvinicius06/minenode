{
  "name": "@minenode/minenode",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0-only",
  "node": ">=16.0.0",
  "bin": {
    "minenode": "./build/app.js"
  },
  "devDependencies": {
    "@swc-node/jest": "^1.4.1",
    "@types/jest": "^27.0.3",
    "@types/js-yaml": "^4.0.5",
    "@types/long": "^4.0.1",
    "@types/node": "^16.11.12",
    "@types/node-7z": "^2.1.3",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.4",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.5.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "typescript": "^4.5.3",
    "wabt": "^1.0.24"
  },
  "dependencies": {
    "7zip-bin": "^5.1.1",
    "@swc-node/register": "^1.4.1",
    "chalk": "^4.1.2",
    "eventemitter3": "^4.0.7",
    "js-yaml": "^4.1.0",
    "nbt": "^0.8.1",
    "node-7z": "^3.0.0",
    "superstruct": "^0.15.3",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "start": "node -r @swc-node/register ./src/app.ts",
    "debug": "cross-env MINENODE_DEBUG=1 nodemon -w ./src --exec 'yarn start' --ext ts",
    "build:ts": "tsc",
    "build:wasm": "wat2wasm ./wasm/binary.wat -o ./wasm/binary.wasm",
    "build": "run-p build:ts build:wasm",
    "lint": "eslint --ext ts src test",
    "lint:fix": "eslint --fix --ext ts src test",
    "pretest": "run-s build:wasm",
    "test:ts": "tsc --noEmit",
    "test:jest": "jest",
    "test": "run-p test:ts test:jest",
    "prepackage": "run-s build",
    "package": "pkg package.json"
  },
  "pre-commit": {
    "run": [
      "lint",
      "test"
    ]
  },
  "pkg": {
    "assets": [
      "node_modules/7zip-bin/**/*",
      "wasm/**/*.wasm"
    ],
    "targets": [
      "node16-linux-x64",
      "node16-win-x64",
      "node16-macos-x64"
    ],
    "outputPath": "dist",
    "public": true
  }
}
