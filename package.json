{
  "name": "@minenode/minenode",
  "version": "0.0.1-dev",
  "private": true,
  "license": "AGPL-3.0-only",
  "node": ">=16.0.0",
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-angular": "^16.0.0",
    "@napi-rs/cli": "^2.0.0",
    "@swc-node/jest": "^1.4.1",
    "@types/jest": "^27.0.3",
    "@types/js-yaml": "^4.0.5",
    "@types/long": "^4.0.1",
    "@types/node": "^16.11.12",
    "@types/node-7z": "^2.1.3",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "eslint-config-marine": "^9.0.6",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-license-header": "^0.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.0",
    "jest": "^27.4.4",
    "lint-staged": "^12.1.7",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "7zip-bin": "^5.1.1",
    "@swc-node/register": "^1.4.1",
    "chalk": "^4.1.2",
    "eventemitter3": "^4.0.7",
    "js-yaml": "^4.1.0",
    "nbt": "^0.8.1",
    "node-7z": "^3.0.0",
    "superstruct": "^0.15.3",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "prepare": "is-ci || husky install",
    "prestart": "run-p build:rs:debug",
    "start": "node -r @swc-node/register ./src/app.ts",
    "debug": "cross-env MINENODE_DEBUG=1 RUST_BACKTRACE=1 nodemon -w ./src -w ./crate --exec 'yarn start' --ext ts,rs",
    "build:ts": "tsc",
    "build:rs:debug": "napi build --js false native",
    "build:rs:release": "napi build --js false --release native",
    "build:debug": "run-p build:ts build:rs:debug",
    "build:release": "run-p build:ts build:rs:release",
    "lint": "eslint --ext ts src test",
    "lint:fix": "eslint --fix --ext ts src test",
    "pretest": "run-s build:rs:debug",
    "test:ts": "tsc --noEmit",
    "test:jest": "jest",
    "test:rs": "cargo test",
    "test": "run-p test:ts test:jest test:rs"
  }
}
